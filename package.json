{
  "name": "self-explain",
  "description": "self explained tools - starting with \"expect\"",
  "version": "0.0.1",
  "author": "Codenautas <codenautas@googlegroups.com>",
  "repository": "codenautas/self-explain",
  "license": "MIT",
  "main": "lib/self-explain.js",
  "files": ["lib"],
  "dependencies": {
    "fs-extra": "~0.28.0",
    "fs-promise": "~0.5.0",
    
    "best-promise": "~0.2.4"
  },
  "devDependencies": {
    "expect.js": "~0.3.1",
    "istanbul": "~0.4.3",
    "mocha": "~2.4.5",
    "sinon": "~1.17.3"
  },
  "engines": {
    "node": ">= 0.12"
  },
  "scripts": {
    "test": "mocha --reporter spec --bail --check-leaks test/",
    "test-ci": "istanbul cover node_modules/mocha/bin/_mocha --report lcovonly -- --reporter spec --check-leaks test/",
    "test-cov": "istanbul cover node_modules/mocha/bin/_mocha -- --reporter dot --check-leaks test/",
    "start": "node demo/demo.js"
  },
  "jshintConfig": {
    "asi": false,
    "forin": true,
    "curly": true
  },
  "eslintConfig": {
    "env": {
      "node": false
    },
    "rules": {
      "strict": 0,
      "no-console": 1,
      "no-unused-vars": 1
    }
  },
  "qa-control": {
    "package-version": "0.2.0",
    "coverage": 100,
    "run-in": "both",
    "stability": "extending",
    "type": "lib"
  }
}
